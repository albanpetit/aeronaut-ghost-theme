{{!< default}}
{{#author}}
  <div class="max-w-lg flex flex-col gap-4 sm:gap-6 text-center mx-auto my-8 sm:my-16">
    <div class="overflow-hidden h-32 w-32 aspect-square rounded-full border-[6px] border-custom-100 mx-auto">
      <img src="{{ profile_image }}" class="" alt="">
    </div>
    <h1 class="font-black text-5xl sm:text-7xl md:text-8xl lg:text-6xl xl:text-7xl 2xl:text-8xl text-balance">{{ name }}</h1>
    {{#if bio}}
      <p class="text-lg sm:text-xl text-pretty">{{ bio }}</p>
    {{/if}}
  </div>
  <h2 class="font-extrabold text-3xl sm:text-4xl"></h2>
{{/author}}

<div class="grid lg:grid-cols-4 grid-cols-2 gap-4 sm:gap-6">
  {{#foreach posts}}
    {{> "post-card"}} {{!-- partials/card.hbs --}}
  {{/foreach}}
</div>
