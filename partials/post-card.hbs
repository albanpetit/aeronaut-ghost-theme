<article class="tile flex flex-col relative bg-cover bg-center rounded-3xl shadow-xl overflow-hidden animate-in ease-out fill-mode-both [animation-duration:500ms] post-style-guide aspect-square bg-white hover:scale-[1.02] has-[a:focus]:scale-[1.02] duration-200 transition-transform justify-end post slide-in-from-bottom-12">
  <div class="flex flex-row justify-start gap-2 absolute top-0 left-0 right-0 m-4 z-50 pointer-events-none *:pointer-events-auto opacity-85">
    {{#foreach tags}}
      <a href="{{url}}" title="{{name}}" class="tag tag-{{id}} {{slug}} flex hover:-mx-1 focus:-mx-1 duration-200 transition-[margin] items-center bg-secondary text-custom-600 text-white truncate sm:text-lg rounded-full h-8 sm:h-10 px-5 py-1 background-">{{name}}</a>
    {{/foreach}}
  </div>
  <div class="flex flex-row justify-end gap-2 absolute top-0 left-0 right-0 m-4 z-50 pointer-events-none *:pointer-events-auto opacity-85">
    <div class="relative bg-custom-600 text-custom-100 rounded-full overflow-hidden size-8 sm:size-10 px-3 py-1">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="absolute size-4 top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">
        <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd"></path>
      </svg>
        <div class="absolute top-0 bottom-0 left-0 right-0 bg-[#000000] opacity-25 peer-hover/href:opacity-0 peer-focus/href:opacity-0 duration-200 z-10"></div>
    </div>
  </div>
  <a href="{{ url }}" class="peer/href absolute top-0 bottom-0 left-0 right-0 z-50"></a>
  <img class="absolute top-0 bottom-0 left-0 right-0 size-full object-cover" src="{{ img_url feature_image size="xl" }}" alt="">
  <div class="flex flex-col gap-4 sm:gap-6 p-4 sm:p-10 lg:p-6 xl:p-8 2xl:p-10 z-30">
    <h2 class="">{{ title }}</h2>
  </div>
</article>