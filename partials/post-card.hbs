<article class="h-64 w-1/2 text- bg-center bg-cover rounded-box" style="background-image: url('{{img_url feature_image size="m"}}');">
  <div class="w-full h-full flex p-4 bg-black/40 rounded-box">

    <a href="{{ url }}" class="w-8/12 flex flex-col justify-between">
      <div class="overflow-hidden">
        <header class="">
          <h2 class="text-2xl font-bold">
            {{!-- {{#unless access}}
            {{^has visibility="public"}}
                {{#unless feature_image}}
                    {{> "icons/lock"}}
                {{/unless}}
            {{/has}}
            {{/unless}} --}}
            {{title}}
          </h2>
        </header>

        {{#if excerpt}}
          <section class="">
            <div class="">{{excerpt characters="40"}}</div>
          </section>
        {{/if}}
      </div>

      <section class="flex gap-2">
        <time class="badge font-medium badge-lg" datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time>
        {{#if reading_time}}
          <span class="badge font-medium badge-lg">{{reading_time}}</span>
        {{/if}}
        {{#if @site.comments_enabled}}
          {{comment_count}}
        {{/if}}
      </section>
    </a>

    <footer class="w-4/12 flex justify-end flex-wrap gap-2 mt-auto">
      {{#foreach tags limit='all'}}
        <a class="btn self-end btn-sm w-fit btn-primary" href='{{ url }}'>{{ name }}</a>
      {{/foreach}}
    </footer>

  </div>
</article>