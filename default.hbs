<!DOCTYPE html data-theme="dracule">
<html lang="{{@site.locale}}" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="{{asset "built/index.css"}}" />
    <script src="{{asset "built/index.js"}}"></script>

    <title>{{meta_title}}</title>

    {{ghost_head}}
  </head>
  <body class="{{body_class}} bg-base-300 pb-16 h-9/12 relative flex flex-col text-base-content">
    <header class="h-20">
      <nav class="navbar h-full p-4">
        <div class="navbar-start hidden lg:flex h-full">
          <div class="flex h-full gap-4">
            <img class="h-full" src="{{@site.logo}}" alt="{{@site.title}}">
            <h1 class="font-bold text-3xl my-auto">{{@site.title}}</h1>
          </div>
        </div>
        <div class="navbar-center">
          <div class="dropdown">
            <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" /></svg>
            </div>
            <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
          </div>
        </div>
        <div class="navbar-end">
          {{navigation}}
        </div>
      </nav>
    </header>

    <main>
      {{{body}}}
    </main>

    {{ghost_foot}}
  </body>
</html>
