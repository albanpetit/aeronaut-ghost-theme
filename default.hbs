<!DOCTYPE html data-theme="dracule">
<html lang="{{@site.locale}}" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="{{asset "built/index.css"}}" />
    <script src="{{asset "built/index.js"}}"></script>

    <title>{{meta_title}}</title>

    {{ghost_head}}
  </head>
  <body class="{{body_class}} bg-base-100 pb-16 h-9/12 relative flex flex-col text-base-content">
    <header class="h-20">
      <nav class="navbar h-full py-4 px-8">
        <div class="navbar-start flex h-full">
          <div class="flex h-full gap-4">
            <h1 class="font-bold text-3xl my-auto">{{@site.title}}</h1>
          </div>
        </div>
        <div class="navbar-end">
          {{navigation}}
        </div>
      </nav>
    </header>

    <main>
      {{{body}}}
    </main>

    {{ghost_foot}}
  </body>
</html>
